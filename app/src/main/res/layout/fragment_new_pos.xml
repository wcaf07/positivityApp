<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.br.positivityapp.fragments.NewPosFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calendarView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/shape_subtitle_pink"
                android:layout_below="@+id/calendarView2"
                android:layout_alignLeft="@+id/calendarView2"
                android:layout_alignStart="@+id/calendarView2"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView" />

            <TextView
                android:text="1 Pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView"
                android:layout_alignTop="@id/imageView"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/shape_subtitle_green"
                android:layout_below="@+id/imageView"
                android:layout_alignLeft="@+id/calendarView2"
                android:layout_alignStart="@+id/calendarView2"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView2" />

            <TextView
                android:text="2 Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_alignTop="@id/imageView2"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView2" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/shape_subtitle_orange"
                android:layout_below="@+id/imageView2"
                android:layout_alignLeft="@+id/calendarView2"
                android:layout_alignStart="@+id/calendarView2"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView3" />

            <TextView
                android:text="3 Orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_alignTop="@id/imageView3"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView3" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/shape_subtitle_orange"
                android:layout_below="@+id/imageView3"
                android:layout_alignLeft="@+id/calendarView2"
                android:layout_alignStart="@+id/calendarView2"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView4" />

            <TextView
                android:text="4 Orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_alignTop="@id/imageView4"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView4" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/shape_subtitle_yellow"
                android:layout_below="@+id/imageView4"
                android:layout_alignLeft="@+id/calendarView2"
                android:layout_alignStart="@+id/calendarView2"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView5" />

            <TextView
                android:text="5+ Yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_alignTop="@id/imageView5"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView5" />

        </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
